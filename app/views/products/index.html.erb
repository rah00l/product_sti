<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Color</th>
    <th>Status</th>
    <th>Inward Date</th>
    <th>Description</th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= product.color %></td>
    <td><%= product.status %></td>
    <td><%= product.inward_date %></td>
    <td><%= product.description %></td>
    <td><%= link_to 'Edit', edit_polymorphic_path(product) %></td>
  </tr>
<% end %>
</table>

