<%= form_for(@product,  as: :product) do |f| %>
<% if @product.errors.any? %>
  <div id="error_explanation">
  <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

  <ul>
    <% @product.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<div class="field">
  <%= f.label :name %><br />
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :price %><br />
  <%= f.text_field :price %>
</div>

<% if @product.type.eql?('Pen') %>
<div class="field">
  <%= f.label :color %><br />
  <%= f.select(:color, options_for_select(Pen::COLORS), prompt: 'Select One' ) %>
</div>
<% end %>

<div class="field">
 <%= f.check_box :status %>
 <%= f.label "Status" %><br />
</div>

<div class="field">
  <%= f.label :inward_date %><br />
  <%= f.datetime_select :inward_date %>
</div>

<div class="field">
  <%= f.label :description %><br />
  <%= f.text_area :description %>
</div>

<%= f.hidden_field :type %>

<div class="actions">
  <%= f.submit %>
</div>
<% end %>
